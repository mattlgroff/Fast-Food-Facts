<!-- Javascript -->
<script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
<script type="text/javascript" src="../../assets/js/frontNutrition.js"></script>

<div class="container main">
  <div class="row">
    <div id="piechart" style="width: 500px; height: 500px;" class="col-sm-12 col-xs-12 col-md-6 col-lg-6"> <!-- Begin First Col -->
    </div> <!-- End First Col -->

    <div class="col-sm-12 col-xs-12 col-md-6 col-lg-6"><!-- Begin Second Col -->
      {{#if [USDA ID]}}<h3>USDA Verified Data</h3><p>Nutrition facts provided by the USDA.</p>
      {{else}}<h3 class="red">User Submitted Data</h3><p class="red">Nutrition facts may not be complete or accurate.</p>{{/if}}
      <section class="performance-facts">
      <header class="performance-facts__header">
        <h3 class="performance-facts__title"><span id="item">{{[Name]}}</span></h3>
        <p>ID: {{id}}</p>
        <p>Serving Size {{"Serving Size"}}</p>
      </header>
      <table class="performance-facts__table">
        <thead>
          <tr>
            <th colspan="3" class="small-info">
              Nutrition Per Serving
            </th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <th colspan="2">
              <b>Calories</b>
              <span>{{[Calories]}}</span>
            </th>
            <td>
              Calories from Fat {{caloriesFromFat [Total Fat]}}
            </td>
          </tr>
          <tr class="thick-row">
            <td colspan="3" class="small-info">
              <b class="float_right">% Daily Value*</b>
            </td>
          </tr>
          <tr>
            <th colspan="2">
              <b>Total Fat</b>
              <span id="fat">{{[Total Fat]}}</span>g
            </th>
            <td>
                <b>{{percentDailyTotalFat [Total Fat]}}%</b>
              </td>
          </tr>
          <tr>
            <td class="blank-cell">
            </td>
            {{#if [Saturated Fat]}}
            <th>
              Saturated Fat
              {{[Saturated Fat]}}g
            </th>
            <td>
              <b>{{percentDailySatFat [Saturated Fat]}}%</b>
            </td>
            {{else}}
            <th class="red">
              Saturated Fat
              {{[Saturated Fat]}}g
            </th>
            {{/if}}
          </tr>
          <tr>
            <td class="blank-cell">
            </td>
            {{#if [Trans Fat]}}
            <th>
              Trans Fat
              {{[Trans Fat]}}g
            </th>
            {{else}}
            <th class="red">
              Trans Fat
              {{[Trans Fat]}}g
            </th>
            {{/if}}
            <td>
            </td>
          </tr>
          <tr>
            {{#if Cholesterol}}
            <th colspan="2">
              <b>Cholesterol</b>
              {{[Cholesterol]}}mg
            </th>
            <td>
              <b>{{percentDailyChol [Cholesterol]}}%</b>
            </td>
            {{else}}
            <th class="red" colspan="2">
              <b>Cholesterol</b>
              {{[Cholesterol]}}mg
            </th>
            {{/if}}
          </tr>
          <tr>
            {{#if Sodium}}
            <th colspan="2">
              <b>Sodium</b>
              {{[Sodium]}}mg
            </th>
            <td>
              <b>{{percentDailySodium [Sodium]}}%</b>
            </td>
            {{else}}
            <th class="red" colspan="2">
              <b>Sodium</b>
              {{[Sodium]}}mg
            </th>
            {{/if}}
          </tr>
          <tr>
            <th colspan="2">
              <b>Total Carbohydrate</b>
              <span id="carbs">{{[Total Carbohydrate]}}</span>g
            </th>
            <td>
              <b>{{percentDailyTotalCarb [Total Carbohydrate]}}%</b>
            </td>
          </tr>
          <tr>
            <td class="blank-cell">
            </td>
            {{#if [Dietary Fiber]}}
            <th>
              Dietary Fiber
              {{"Dietary Fiber"}}g
            </th>
            <td>
              <b>{{percentDailyDietaryFiber [Dietary Fiber]}}%</b>
            </td>
            {{else}}
            <th class="red">
              Dietary Fiber
              {{"Dietary Fiber"}}g
            </th>
            {{/if}}
            
          </tr>
          <tr>
            <td class="blank-cell">
            </td>
            {{#if Sugars}}
            <th>
              Sugars
              {{[Sugars]}}g
            </th>
            {{else}}
            <th class="red">
              Sugars
              {{[Sugars]}}g
            </th>
            {{/if}}
            <td>
            </td>
          </tr>
          <tr class="thick-end">
            <th colspan="2">
              <b>Protein</b>
              <span id="protein">{{[Protein]}}</span>g
            </th>
            <td>
            </td>
          </tr>
        </tbody>
      </table>
      
      <table class="performance-facts__table--grid">
        <tbody>
          <tr>
            {{#if [Vitamin A]}}
            <td colspan="2">
              Vitamin A
              {{[Vitamin A]}}%
            </td>
            {{else}}
            <td class="red" colspan="2">
              Vitamin A
              {{[Vitamin A]}}
            </td>
            {{/if}}
            {{#if [Vitamin C]}}
            <td>
              Vitamin C
              {{[Vitamin C]}}%
            </td>
            {{else}}
            <td class="red">
              Vitamin C
              {{[Vitamin C]}}
            </td>
            {{/if}}
          </tr>
          <tr class="thin-end">
            {{#if Calcium}}
            <td colspan="2">
              Calcium
              {{[Calcium]}}%
            </td>
            {{else}}
            <td class="red" colspan="2">
              Calcium
              {{[Calcium]}}
            </td>
            {{/if}}
            {{#if Iron}}
            <td>
              Iron
              {{[Iron]}}%
            </td>
            {{else}}
            <td class="red">
              Iron
              {{[Iron]}}
            </td>
            {{/if}}
          </tr>
        </tbody>
      </table>
      
      <p class="small-info">* Percent Daily Values are based on a 2,000 calorie diet. Your daily values may be higher or lower depending on your calorie needs:</p>
      
      <table class="performance-facts__table--small small-info">
        <thead>
          <tr>
            <td colspan="2"></td>
            <th>Calories:</th>
            <th>2,000</th>
            <th>2,500</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <th colspan="2">Total Fat</th>
            <td>Less than</td>
            <td>65g</td>
            <td>80g</td>
          </tr>
          <tr>
            <td class="blank-cell"></td>
            <th>Saturated Fat</th>
            <td>Less than</td>
            <td>20g</td>
            <td>25g</td>
          </tr>
          <tr>
            <th colspan="2">Cholesterol</th>
            <td>Less than</td>
            <td>300mg</td>
            <td>300 mg</td>
          </tr>
          <tr>
            <th colspan="2">Sodium</th>
            <td>Less than</td>
            <td>2,400mg</td>
            <td>2,400mg</td>
          </tr>
          <tr>
            <th colspan="3">Total Carbohydrate</th>
            <td>300g</td>
            <td>375g</td>
          </tr>
          <tr>
            <td class="blank-cell"></td>
            <th colspan="2">Dietary Fiber</th>
            <td>25g</td>
            <td>30g</td>
          </tr>
        </tbody>
      </table>
      
      <p class="small-info">
        Calories per gram:
      </p>
      <p class="small-info text-center">
        Fat 9
        &bull;
        Carbohydrate 4
        &bull;
        Protein 4
      </p>
      
      </section>
    </div> <!-- End Second Col -->
  </div> <!-- End Row-->
</div><!-- End Container Main -->